#include <iostream> 
using namespace std;

const int ARRAY_SIZE = 5;

//func prototypes 
void enterArrayData (double* arr, int size);
void outputArrayData(const double* arr, int size);
double sumArray(const double* arr, int size);

int main () 
{ 
    double * number = new(nothrow) double [ARRAY_SIZE];

    if (numbers == nullptr)
    {
        cout << "Error: memory allocation failed." << endl;
        return 1;
    }
    enterArrayData(numbers,ARRAY_SIZE);
    outputArrayData(numbers, ARRAY_SIZE)    

    double total = sumArray(numbers, ARRAY_SIZE); 
    cout << "Sum of values: " << total << endl;

    delete[] numbers;
    numbers = nullptr


    return 0;
} 

void enterArrayData(double* arr, int size)
{
    cout << "Data entry for the array:" << endl;

    for (int i = 0; i < size; i++)
    { 
        cout << "   > Element #" << i << ": ";

        while (!(cin >> *(arr +i))) 
        {
            cout << "Invalid input. Enter a valid number: ";
            cin.clear();
            cin.ignore(10000, '\n');
        }
    } 
    cout << "Data entry complete." << endl;
} 

void outputArray Data(const double* arr, int size)
{
    cout << "Outputting array elements: ";
    for (int i = 0; i < size; i++)
    {
        cout << *(arr + i) << " ";
    }
    cout << endl;
} 

